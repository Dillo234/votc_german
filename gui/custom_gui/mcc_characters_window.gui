template acs_skill_grid_text
{
    parentanchor = center
    margin_bottom = 4
    align = center
}

template acs_skill_grid_background
{
    name = "skill_icon_bg"
    texture = "gfx/interface/window_character/character_view_skills_bg.dds"
    framesize = { 70 26 }
    margin = { 5 6 }
}

types mcc_character_presentation_types {
    type mcc_skills_grid = hbox {
        name = "acs_skills_grid"
        maximumsize = { 215 25 }
        widget = {
            size = { 22 25 }
            text_single = {
                using = acs_skill_grid_text
                text = "[Character.GetSkill('diplomacy')]"
                tooltip = "[diplomacy|E] [Character.GetSkillWithLevel('diplomacy')]"
            }
            background = {
                using = acs_skill_grid_background
                frame = 1
            }
        }
        widget = {
            size = { 22 25 }
            text_single = {
                using = acs_skill_grid_text
                text = "[Character.GetSkill('martial')]"
                tooltip = "[martial|E] [Character.GetSkillWithLevel('martial')]"
            }
            background = {
                using = acs_skill_grid_background
                frame = 2
            }
        }
        widget = {
            size = { 22 25 }
            text_single = {
                using = acs_skill_grid_text
                text = "[Character.GetSkill('stewardship')]"
                tooltip = "[stewardship|E] [Character.GetSkillWithLevel('stewardship')]"
            }
            background = {
                using = acs_skill_grid_background
                frame = 3
            }
        }
        widget = {
            size = { 22 25 }
            text_single = {
                using = acs_skill_grid_text
                text = "[Character.GetSkill('intrigue')]"
                tooltip = "[intrigue|E] [Character.GetSkillWithLevel('intrigue')]"
            }
            background = {
                using = acs_skill_grid_background
                frame = 4
            }
        }
        widget = {
            size = { 22 25 }
            text_single = {
                using = acs_skill_grid_text
                text = "[Character.GetSkill('learning')]"
                tooltip = "[learning|E] [Character.GetSkillWithLevel('learning')]"
            }
            background = {
                using = acs_skill_grid_background
                frame = 5
            }
        }
        widget = {
            size = { 22 25 }
            text_single = {
                using = acs_skill_grid_text
                text = "[Character.GetProwess]"
                tooltip = "[Character.GetProwessBreakdown]"
            }
        }
    }

    type mcc_info_grid = hbox {
        layoutpolicy_horizontal = preferred
        layoutpolicy_vertical = expanding
        minimumsize = { 0 60 }
        margin_left = 0
        
        background = {
            using = Background_Area_Dark
            margin = { 3 3 }
            alpha = 0.5
        }

        # Dynasty
        widget = {
            layoutpolicy_vertical = expanding
            size = { 45 40 }

            coa_house_small = {
                datacontext = "[Character.GetHouse]"
                parentanchor = center
                scale = 0.7
            }
        }

        # Traits
        widget = {
            layoutpolicy_vertical = expanding
            size = { 180 60 }

            dynamicgridbox = { 
                name = "traits_grid"
                datamodel = "[Character.GetTraitIndices]"
                datamodel_reuse_widgets = yes
                flipdirection = yes
                layoutpolicy_horizontal = expanding
                layoutpolicy_vertical = expanding
                addcolumn = 30
                addrow = 28

                min_width = 24
                datamodel_wrap = 6
                maxverticalslots = 2

                parentanchor = vcenter
                widgetanchor = vcenter

                item = {
                    icon_trait = {
                        datacontext = "[GetTraitForIndex(int32.GetInt)]"
                        visible = "[Trait.IsValid]"

                        blockoverride "icon_size"
                        {
                            size = { 30 30 }
                        }

                        blockoverride "tooltip_placement"
                        {
                            using = tooltip_se
                        }

                        blockoverride "glow_radius"
                        {
                            glow_radius = 3
                        }
                    }
                }
            }
        }

        hbox = {
            margin_right = 5
            vbox = {
                datacontext = "[Character.GetCulture]"

                tooltipwidget = {
                    culture_tooltip = {}
                }
                using = tooltip_se

                hbox = {
                    button_religion_icon = {
                        datacontext = "[Character.GetFaith]"
                        size = { 24 24 }
                    }

                    icon = {
                        name = "culture"
                        texture = "gfx/interface/icons/icon_culture.dds"
                        size = { 24 24 }
                    }
                }
                text_single = {
                    layoutpolicy_horizontal = expanding
                    min_width = 60
                    align = center|nobaseline
                    autoresize = no
                    text = "CULTURE_LISTS_WINDOW"
                }
            }
        }
    }
}

