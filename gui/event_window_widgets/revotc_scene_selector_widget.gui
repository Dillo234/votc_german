hbox = {
	name = "revotc_scene_selector_widget"
	layoutpolicy_horizontal = expanding
	margin = { 10 0 }
	
  	state = {
        name = pause
        trigger_when = "[Not(IsGamePaused)]"
        on_start = "[OnPause]"
    }
  
  	state = {
        name = revotc_scene_selector_show
        trigger_on_create = yes
    	on_start = ""
    	on_finish = "[GetVariableSystem.Toggle('revotc_scene_selector_opened')]"
  	}
	
	expand = {}

}
